<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="courseTitle" parent ="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/pluralsight_orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AddFab" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="srcCompat">@drawable/ic_baseline_add_circle_24</item>
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>